<configuration>

    <!-- === FILE APPENDER — запис логів у файл === -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%date [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- === CONSOLE APPENDER === -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- === EMAIL APPENDER (only for ERROR) === -->
    <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
        <smtpHost>smtp.gmail.com</smtpHost>
        <smtpPort>587</smtpPort>
        <username>${SMTP_USERNAME}</username>
        <password>${SMTP_PASSWORD}</password>
        <STARTTLS>true</STARTTLS>

        <to>romangarnaga972@gmail.com</to>
        <from>travelapp-logger@gmail.com</from>
        <subject>[TravelApp] CRITICAL ERROR</subject>

        <!-- Фільтр: тільки ERROR -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <!-- Формат листа -->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%thread] %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <!-- === ROOT LOGGER === -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="EMAIL"/>
    </root>

</configuration>
